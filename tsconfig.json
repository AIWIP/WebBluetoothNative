{
    "compilerOptions": {
      "target": "es6",
      "jsx": "react-native",
      "outDir": "./build/",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "allowJs": true
    },
    "compileOnSave": true,
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.d.ts",
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules"
    ]
  }